{
  "name": "@semabit/release-it-bumper",
  "version": "2.1.0",
  "description": "Version read/write plugin for release-it",
  "main": "index.js",
  "scripts": {
    "test": "ava test.js --verbose",
    "release": "release-it",
    "changelog": "auto-changelog"
  },
  "keywords": [
    "release",
    "release-it",
    "release-it-plugin",
    "version",
    "bump",
    "manifest"
  ],
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/semabit/release-it-bumper.git"
  },
  "homepage": "https://github.com/semabit/release-it-bumper#readme",
  "author": {
    "email": "lars@webpro.nl",
    "name": "Lars Kappert"
  },
  "dependencies": {
    "detect-indent": "^6.0.0",
    "lodash.castarray": "^4.4.0",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "mock-fs": "^4.10.0",
    "xml2js": "^0.4.22",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "auto-changelog": "^1.16.1",
    "ava": "^2.0.0",
    "release-it": "^14.2.0",
    "sinon": "^7.3.2"
  },
  "peerDpendencies": {
    "release-it": "^14.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=8"
  },
  "release-it": {
    "hooks": {
      "before:init": "npm test",
      "after:bump": "auto-changelog --latest-version ${version}"
    },
    "git": {
      "changelog": "auto-changelog --stdout --template ./changelog-template-for-release.hbs",
      "tagArgs": "-s"
    },
    "github": {
      "release": true,
      "releaseName": "${version}",
      "tokenRef": "GITHUB_TOKEN_CLI_RELEASER"
    },
    "npm": {
      "publish": true
    }
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "commitLimit": false,
    "unreleased": true,
    "ignoreCommitPattern": "(Release (v)?|Merge (remote-tracking )?branch)",
    "sortCommits": "date"
  }
}
